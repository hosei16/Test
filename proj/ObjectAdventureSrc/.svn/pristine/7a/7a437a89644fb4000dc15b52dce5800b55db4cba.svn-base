package objectAdventure.rooms.roomImpl;
import objectAdventure.items.itemImpl.Crown;
import objectAdventure.rooms.NormalRoom;


public class EchoRoom extends NormalRoom{



    public EchoRoom() {
        super(1);

        super.setDescription("As you enter the Echo room your footsteps bounce from wall to wall. The room in nearly 100 meters across " +
                "in both directions. The walls and floor are made of solid concrete with no furniture this room looks like an empty storage warehouse." +
                " As you turn to face the door, you hear a deafening voice say, \'I speak without a mouth and hear without ears. I have no body but" +
                " come alive with wind. What am I?\'");

        super.itemList.add(new Crown());
    }


    @Override
    public String getRoomAuthor() {
        return "Andrew Stoerkel";
    }

}

