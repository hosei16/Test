package objectAdventure.rooms.roomImpl;

import objectAdventure.items.itemImpl.CornerStone;
import objectAdventure.rooms.NormalRoom;

/**
 *
 * @author Adam J. Conover, COSC436
 */
public class DangerRoom extends NormalRoom {
    private static final int ROOM_ID = 99;
    
    @Override
    public String getRoomAuthor() {
        return "Rashid Taleb";
    }

    /**
     * Default Constructor
     */
    public DangerRoom() {
        super(18);
        
        super.setDescription("Banana peels litter the floor and the walls are "
                + "adorned with what appear to be whipped cream pies. You will"
                + " surely perish if you attempt to explore this room without"
                + " proper footwear.");
        
        super.itemList.add(new CornerStone());
    }
    
    

}